{
  "name": "simple-ui",
  "scopeName": "source.simple-ui",
  "fileTypes": [
    ".sui"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.simple-ui",
      "match": "\\b(button|color|component|div|for:|function|header|headerlevel:|height|image|label|labeltext:|linebreak|link|linktext:|number|onclick:|paragraph|placeholdertext:|popup|size|string|textbox|title|usecomponent|variable|width)\\b"
    },
    {
      "name": "keyword.symbol.simple-ui",
      "match": "(\\,|\\:|\\(|\\)|\\{|\\}|\\for:|\\headerlevel:|\\labeltext:|\\linktext:|\\onclick:|\\placeholdertext:)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.simple-ui",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.simple-ui"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.simple-ui"
        }
      ]
    }
  }
}