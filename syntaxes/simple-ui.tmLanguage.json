{
  "name": "simple-ui",
  "scopeName": "source.simple-ui",
  "fileTypes": [
    ".sui"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.simple-ui",
      "match": "\\b(background-color|button|component|div|font-size|for:|function|header|headerlevel:|height|image|label|linebreak|link|linktext:|number|onClick:|paragraph|placeholdertext:|popup|string|text-color|textbox|title|topbar|usecomponent|width)\\b"
    },
    {
      "name": "keyword.symbol.simple-ui",
      "match": "(\\,|\\:|\\(|\\)|\\{|\\}|\\background-color|\\font-size|\\for:|\\headerlevel:|\\linktext:|\\onClick:|\\placeholdertext:|\\text-color)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.simple-ui",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.simple-ui"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.simple-ui"
        }
      ]
    }
  }
}