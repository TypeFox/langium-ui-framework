{
  "name": "simple-ui",
  "scopeName": "source.simple-ui",
  "fileTypes": [
    ".sui"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.simple-ui",
      "match": "\\b(background-color|button|component|div|font-size|function|header|height|image|label|linebreak|link|number|paragraph|popup|string|text-color|textbox|title|topbar|usecomponent|width)\\b|\\b(for:|headerlevel:|linktext:|onClick:|placeholdertext:)\\B"
    },
    {
      "name": "string.quoted.double.simple-ui",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.simple-ui",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.simple-ui",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.simple-ui"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.simple-ui"
        }
      ]
    }
  }
}