{
  "name": "simple-ui",
  "scopeName": "source.simple-ui",
  "fileTypes": [
    ".sui"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.simple-ui",
      "match": "\\b(button|color:|component|csstext|div|for:|function|header|headerlevel:|heightpx:|id:|image|label|labeltext:|linebreak|link|linktext:|onclick:|paragraph|placeholdertext:|popup|sizepx:|textbox|title|usecomp|widthpx:)\\b"
    },
    {
      "name": "keyword.symbol.simple-ui",
      "match": "(\\,|\\{|\\}|\\color:|\\for:|\\headerlevel:|\\heightpx:|\\id:|\\labeltext:|\\linktext:|\\onclick:|\\placeholdertext:|\\sizepx:|\\widthpx:)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.simple-ui",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.simple-ui"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.simple-ui"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.simple-ui"
        }
      ]
    }
  }
}