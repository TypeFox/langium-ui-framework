{
    "name": "langium-simple-ui",
    "displayName": "langium-simple-ui",
    "description": "description",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "simple-ui",
                "aliases": [
                    "SimpleUI",
                    "simple-ui"
                ],
                "extensions": [
                    ".sui"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "simple-ui",
                "scopeName": "source.simple-ui",
                "path": "./syntaxes/simple-ui.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:simple-ui"
    ],
    "files": [
        "bin",
        "out",
        "src"
    ],
    "bin": {
        "simple-ui-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc && npx shx cp -r ./src/assets/ ./out/src/assets/",
        "watch": "tsc -w",
        "clean": "npx shx rm -rf ./out",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "commander": "^8.0.0",
        "generator-langium": "^0.2.1",
        "langium": "1.2.0",
        "vscode-languageclient": "^8.0.2",
        "vscode-languageserver": "^8.0.2"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "langium-cli": "1.0.0",
        "source-map-loader": "^3.0.0",
        "ts-loader": "^9.2.3",
        "typescript": "^4.1.3",
        "webpack": "^5.39.1",
        "webpack-cli": "^4.7.2"
    }
}
